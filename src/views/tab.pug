doctype html
html
    head
        script(src="https://statics.teams.cdn.office.net/sdk/v1.6.0/js/MicrosoftTeams.min.js")
    body
        script.
            microsoftTeams.initialize();
            let saveTab1 = () => {
                microsoftTeams.settings.registerOnSaveHandler((saveEvent) => {
                    microsoftTeams.settings.setSettings({
                        websiteUrl: "https://nhjoeng.azurewebsites.net",
                        contentUrl: "https://nhjoeng.azurewebsites.net",
                        entityId: "Tab1",
                        suggestedDisplayName: "Tab1"
                    });
                    saveEvent.notifySuccess();
                });
            }
            let saveTab2 = () => {
                microsoftTeams.settings.registerOnSaveHandler((saveEvent) => {
                    microsoftTeams.settings.setSettings({
                        websiteUrl: "https://nhjoeng.azurewebsites.net",
                        contentUrl: "https://nhjoeng.azurewebsites.net",
                        entityId: "Tab2",
                        suggestedDisplayName: "Tab2"
                    });
                    saveEvent.notifySuccess();
                });
            }
            const colorClickTab1 = () => {
                microsoftTeams.settings.setValidityState(true);
                saveTab1()
            }

            const colorClickTab2 = () => {
                microsoftTeams.settings.setValidityState(true);
                saveTab2();
            }

        button(onclick="colorClickTab1()") Select Tab1
        button(onclick="colorClickTab2()") Select Tab2